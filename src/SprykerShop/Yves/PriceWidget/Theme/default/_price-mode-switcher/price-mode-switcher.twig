{% if _widget.priceModes|length > 1 %}
    <form method="GET" action="{{ path('price-mode-switch') }}" data-component="price-mode-switch">
        <select name="price-mode" onchange="this.form.submit()">
            {% for priceMode in _widget.priceModes %}
                <option value="{{ priceMode }}" {{ (priceMode == _widget.currentPriceMode) ? 'selected' : ''}}>{{ ('price.mode.' ~ priceMode | lower) | trans }}</option>
            {% endfor %}
        </select>
        <input type="hidden" name="referrer-url" value="{{ app.request.requestUri }}" />
    </form>
{% endif %}

