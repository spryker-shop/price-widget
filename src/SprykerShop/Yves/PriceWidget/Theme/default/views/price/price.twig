{% extends template('widget') %}

{% define data = {
    amount: _widget.product.price,
    originalAmount: _widget.product.prices.ORIGINAL | default(null)
} %}

{% block template %}
    {% if data.amount is not empty %}
        {{parent()}}
    {% endif %}
{% endblock %}

{% block body %}
    <p>
        {% if can('SeePricePermissionPlugin') %}
            {% include molecule('price') with {
                data: {
                    amount: data.amount | money,
                    originalAmount: data.originalAmount is empty ? null : data.originalAmount | money
                }
            } only %}
        {% else %}
            {{ 'customer.access.cannot_see_price' | trans }}
        {% endif %}
    </p>
{% endblock %}
